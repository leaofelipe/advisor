{
  "name": "advisor",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.0.0",
  "engines": {
    "bun": ">=1.0.0",
    "node": "DO NOT USE - Use Bun instead",
    "npm": "DO NOT USE - Use Bun instead"
  },
  "scripts": {
    "preinstall": "bun --version || (echo 'Error: This project requires Bun. Install from https://bun.sh' && exit 1)",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "echo \"No tests specified yet\"",
    "format": "prettier --write src",
    "commit": "cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@radix-ui/themes": "^3.3.0",
    "modern-normalize": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.13.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@storybook/react-vite": "^10.2.10",
    "@vitejs/plugin-react": "^4.3.4",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "storybook": "^10.2.10",
    "vite": "^6.0.3"
  }
}
